            $req = $BDD->prepare("INSERT INTO test (nom, nationalite, age, poste, email) VALUES (:nom, :nationalite, :age, :poste, :email)");
            # si 
            if ($req->execute(array($nom,$nationalite,$age,$poste,$email))) {

